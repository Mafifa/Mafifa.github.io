---
import Tailwind from "@/components/icons/Tailwind.astro";
import React from "./icons/ReactIco.astro";
import JS from "./icons/JSIco.astro";
import TS from "./icons/TSIco.astro";
import SocialPill from "./SocialPill.astro";
import GitHubIco from "./icons/GitHubIco.astro";
import LinkIco from "./icons/LinkIco.astro";
import Line from "./Line.astro";
import AstroIco from "./icons/AstroIco.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const TAGS = {
  REACT: {
    name: "React.js",
    class: "bg-[#a480d1] text-2xl text-black font-black",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#abcce5] text-2xl text-black font-black",
    icon: Tailwind,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#fcf4a7] text-2xl text-black font-black",
    icon: JS,
  },
  TS: {
    name: "TypeScript",
    class: "bg-[#6da7c9] text-2xl text-black font-black text-base",
    icon: TS,
  },
  AS: {
    name: "Astro",
    class: "bg-[#fcdebb] text-2xl text-black font-black text-base",
    icon: AstroIco,
  },
};

const PROJECTS = [
  {
    title: "➢ MAFFI TYPE",
    description: t("projects.description"),
    link: "https://maffi-type.vercel.app",
    github: "https://github.com/Mafifa/maffi-type",
    image: "/Projects/MAFFI-TYPE.png",
    tags: [TAGS.REACT, TAGS.TS, TAGS.TAILWIND],
  },
  {
    title: "➢ Fer Books",
    description: t("projects.description1"),
    link: "https://fer-books.vercel.app/",
    github: "https://github.com/Mafifa/fer-books/tree/main",
    image: "/Projects/FerBooks.png",
    tags: [TAGS.AS, TAGS.TS, TAGS.TAILWIND, TAGS.JS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, github, link }) => (
    <>
      <article>
        <h3 class="text-2xl font-semibold mb-2">{title}</h3>
        <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
          {description}
        </p>
        <div class="flex items-center p-2 justify-between">
          <ul class="flex gap-x-4 flex-row mb-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs py-2 border border-white/10 px-2 ${tag.class}`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>

        <img
          class="rounded shadow-white/10 shadow-2xl"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <div class="flex gap-x-3 mt-2">
          <SocialPill href={link}>
            <LinkIco class="size-5 md:size-6" />
            Web site
          </SocialPill>
          <SocialPill href={github}>
            <GitHubIco class="size-5 md:size-6" />
            Repositorio
          </SocialPill>
        </div>
      </article>
      <Line />
    </>
  ))
}
